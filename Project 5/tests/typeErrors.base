tuple User {
    integer age.
    logical student.
}.

tuple User user.

void set_user_age{logical age} [
    return (user:age = age). !! 12,19|
]

integer get_user_age{} [
    return user:student. !! 13|
]

logical is_user_a_student{} [
    return user:age. !! 13|
]

!! Okay, now we do sequential testing

!!!!!!!!!!!!!!!!!!!!!!!  Write attempt of function name  !!!!!!!!!!!!!!!!!!!!!!!
void WAOFN{} [
    $ Function level
    write << double.

    $ in IF stmt
    if False [ write << WAOFN. ]

    $ in IF-ELSE stmt
    if True [ write << set_user_age. ]
    else [ write << get_user_age. ]

    $ in WHILE stmt
    while False [ write << is_user_a_student. ]
]

